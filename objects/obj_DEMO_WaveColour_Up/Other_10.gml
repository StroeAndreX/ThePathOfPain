with (obj_DEMO)
{
switch (ring_colour)
    {
    case c_white: ring_colour = c_red; break;
    case c_red: ring_colour = c_orange; break;
    case c_orange: ring_colour = c_yellow; break;
    case c_yellow: ring_colour = c_lime; break;
    case c_lime: ring_colour = c_aqua; break;
    case c_aqua: ring_colour = c_blue; break;
    case c_blue: ring_colour = c_fuchsia; break;
    case c_fuchsia: ring_colour = c_white; break;
    }
}









